<ResourceDictionary
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:local="clr-namespace:TR.caMonPageMod.bisc">
	<Style TargetType="{x:Type local:BISCCtrl}">
		<Setter Property="MyMargin" Value="0"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type local:BISCCtrl}">
					<Border Background="Transparent"
									HorizontalAlignment="Left"
									VerticalAlignment="Top"
									Margin="{TemplateBinding MyMargin}"
									BorderBrush="{x:Null}"
									Visibility="Visible"
									BorderThickness="0">
						<Image Source="{TemplateBinding Source}" Margin="0" Visibility="{TemplateBinding CurrentVisibility}" Stretch="None"/>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
